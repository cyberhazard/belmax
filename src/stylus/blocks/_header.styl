.Header
  position relative
  height 100vh
  border 1px solid #000
  background url('/images/header-bg.png') center center/cover no-repeat
  &__top
    position absolute
    top 8rem
    left 0
    width 100%
  &__container
    display flex
    align-items center
    justify-content space-between
  &__logo
    width 19rem
    flex 0 0 auto
    & img
      width 100%
  &__content
    display flex
    justify-content center
    align-items center
    height 100%
  &__heading
    font-family: 'RobotoSlab'
    font-size: 4.6rem
    font-weight: 700
    color #fff
    text-align center
    width 93.5rem
    margin 0 auto
    margin-bottom 3.7rem
  &__text
    font-family: 'Open Sans'
    font-weight: 400
    font-size: 1.8rem
    color: #fff
    width 71.7rem
    text-align center
    margin 0 auto
    margin-bottom 5rem
  &__button
    display block
    margin 0 auto
    background-color #0690AF
    font-family: 'Open Sans'
    font-weight: 700
    font-size: 1.8rem
    color #fff
    border none
    padding 1.5rem 4rem 1.9rem 4rem
    border-radius: 3rem
    cursor pointer
    &::after
      content: ''
      display inline-block
      width 1rem
      height 0.6rem
      transform: rotate(-90deg)
      vertical-align: middle
      margin-left 1rem
      background url('data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2010%206%22%3E%0A%20%20%3Cpath%20fill%3D%22%23FFF%22%20fill-rule%3D%22evenodd%22%20d%3D%22M9.4.103A.312.312%200%200%200%209.167%200a.312.312%200%200%200-.23.103L5%204.155%201.062.103A.312.312%200%200%200%20.832%200a.312.312%200%200%200-.23.103L.1.62a.33.33%200%200%200%200%20.474l4.67%204.804A.313.313%200%200%200%205%206a.312.312%200%200%200%20.23-.103L9.9%201.093a.33.33%200%200%200%200-.475L9.4.103z%22%2F%3E%0A%3C%2Fsvg%3E') center center/cover no-repeat

.Menu
  display flex
  &__link
    position relative
    font-family: 'Open Sans'
    font-size: 1.6rem
    font-weight: 600
    color #fff
    margin-right 5.6rem
    transition: color .3s
    will-change: color
    &:hover
      color #0690AF
    &:last-child
      margin-right 0
      &::after
        display none
    &::after
      content: ''
      position absolute
      top 50%
      left calc(100% + 2.8rem)
      transform: translateY(-50%)
      width 0.6rem
      height 0.6rem
      border-radius 50%
      background-color #0690AF


