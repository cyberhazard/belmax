.Header
  position relative
  height 100vh
  border 1px solid #000
  background url('/images/header-bg.png') center center/cover no-repeat
  &__top
    position absolute
    top 8rem
    left 0
    width 100%
  &__container
    display flex
    align-items center
    justify-content space-between
  &__logo
    width 19rem
    flex 0 0 auto
    & img
      width 100%
  &__content
    display flex
    justify-content center
    align-items center
    height 100%
  &__heading
    font-family: 'RobotoSlab'
    font-size: 4.6rem
    font-weight: 700
    color #fff
    text-align center
    width 93.5rem
    margin 0 auto
    margin-bottom 3.7rem
  &__text
    font-family: 'Open Sans'
    font-weight: 400
    font-size: 1.8rem
    color: #fff
    width 71.7rem
    text-align center
    margin 0 auto
    margin-bottom 5rem
  &__button
    display block
    margin 0 auto
    background-color #0690AF
    font-family: 'Open Sans'
    font-weight: 700
    font-size: 1.8rem
    color #fff
    border none
    padding 1.5rem 4rem 1.9rem 4rem
    border-radius: 3rem
    cursor pointer
    &::after
      content: ''
      display inline-block
      width 1rem
      height 0.6rem
      transform: rotate(-90deg)
      vertical-align: middle
      margin-left 1rem
      background url('data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2010%206%22%3E%0A%20%20%3Cpath%20fill%3D%22%23FFF%22%20fill-rule%3D%22evenodd%22%20d%3D%22M9.4.103A.312.312%200%200%200%209.167%200a.312.312%200%200%200-.23.103L5%204.155%201.062.103A.312.312%200%200%200%20.832%200a.312.312%200%200%200-.23.103L.1.62a.33.33%200%200%200%200%20.474l4.67%204.804A.313.313%200%200%200%205%206a.312.312%200%200%200%20.23-.103L9.9%201.093a.33.33%200%200%200%200-.475L9.4.103z%22%2F%3E%0A%3C%2Fsvg%3E') center center/cover no-repeat

.Menu
  display flex
  &__link
    position relative
    font-family: 'Open Sans'
    font-size: 1.6rem
    font-weight: 600
    color #fff
    margin-right 5.6rem
    transition: color .3s
    will-change: color
    &_active
      color #0083A0
      &:before
        content ''
        width 100%
        position absolute
        bottom -0.4rem
        left 0
        height 0.2rem
        background #0083A0
    &:hover
      color #0690AF
    &:last-child
      margin-right 0
      &::after
        display none
    &::after
      content: ''
      position absolute
      top 50%
      left calc(100% + 2.8rem)
      transform: translateY(-50%)
      width 0.6rem
      height 0.6rem
      border-radius 50%
      background-color #0690AF
.Header__slider
  &_bottom
    display block
  &_button
    background none
    &_prev
      left auto
      right 90% !important
      & svg
        transform rotate(180deg)
    &_next
      left 90%
  &_pagination
    display flex
    justify-content center
    align-items center
    height 30px
    bottom 8rem

.Header__content .swiper-pagination-bullet {
  position relative
  width 5.6rem
  height 2rem
  font-family OpenSans
  position relative
  text-align: center;
  font-size: 2.4rem;
  color:white;
  opacity: 1;
  background: none;
  margin: 0 0 !important;
  transition 0.3s
}
.Header__content .swiper-pagination-bullet
  &:after
    content ''
    position absolute
    left 0
    bottom -1.8rem
    width 100%
    height 0.3rem
    background white
    transition 0.3s
.Header__content .swiper-pagination-bullet-active {
  color:#0690AF;
  background: none;
}
.Header__content .swiper-pagination-bullet-active
  &:after
    content ''
    position absolute
    left 0
    bottom -1.8rem
    width 100%
    height 0.3rem
    background #0690AF
    transition 0.3s
.Header__slider_button_prev, .Header__slider_button_next
  width 60px
  height 60px

@media (max-width 1000px)
  .Header
    &__heading
      max-width 60rem
      width 100%
      font-size 3.6rem
    &__text
      max-width 60rem
      width 100%
      font-size 1.6rem
      line-height 2.4rem
    &__button
      font-size 1.6rem
  .Header__slider
    &_button
      background none
      &_prev
        left auto
        right 94% !important
        & svg
          width 50px
          height 50px
      &_next
        left 94%
        & svg
          width 50px
          height 50px
  .Menu
    &__link
      font-size 1.4rem
  .Header__slider_button_prev, .Header__slider_button_next
    width 50px
    height 50px

@media (max-width 667px)
  .Header
    &__top
      display none
    &__heading
      max-width 320px
      width 100%
      font-size 2.4rem
      padding 0 1rem
    &__text
      max-width 320px
      width 100%
      font-size 1.4rem
      line-height 2.2rem
      margin-bottom 2rem
      padding 0 1rem
    &__button
      font-size 1.4rem
  .Header__content .swiper-pagination-bullet
    font-size 2rem
  .Header__slider

    &_wrapper
      height 100% !important
    &_buttons_mobile
      width: 100%;
      max-width 320px
      position: absolute;
      left:50%;
      transform translateX(-50%)
      bottom: 8rem;
    &_wrapper
      height 100%
    &_button
      display none
      &_prev
        right 80% !important
        & svg
          width 44px
          height 44px
      &_next
        left 80%
        & svg
          width 44px
          height 44px

  .Header__slider_buttons_mobile .Header__slider_button
    display block
  .Header__slider_buttons_mobile .swiper-button-next, .Header__slider_buttons_mobile .swiper-button-prev
    width 44px
    height 44px
