.Address
  background-color #000C0E
  position absolute
  top 0
  left 0
  width 100%
  &__contacts
    display flex
    height 100%
    align-items center
    width 100%
    height 100%
    padding-left 2rem
  &__link
    position relative
    font-family: 'Open Sans'
    font-size: 1.4rem
    font-weight: 400
    color #fff
    margin-right 10%
    &:last-child
      margin-right 0
    &::before
      content ''
      position absolute
      top 50%
      right calc(100% + 1rem)
      transform: translateY(-50%)
    &:nth-child(2)::before
      width 1.6rem
      height 1.2rem
      background url('/images/Envelope.svg') center center/cover no-repeat
    &:nth-child(3)::before
      width 1.4rem
      height 1.4rem
      background url('/images/Phone.svg') center center/cover no-repeat
    &:nth-child(4)::before
      width .96rem
      height 1.4rem
      background url('/images/Place.svg') center center/cover no-repeat
  &__container
    display flex
    justify-content space-between
    align-items center

.Select
  background-color #0083A0
  font-family: 'Open Sans'
  font-weight: 700
  font-size: 1.4rem
  color #fff
  position relative
  cursor pointer
  z-index 1
  user-select none
  outline none
  flex 0 0 auto
  width 24rem
  &.active
    .Select__options
      display block
    .Select__label::after
      transform translateY(-50%) rotate(-180deg)
