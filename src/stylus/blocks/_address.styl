  &__option
    padding 1rem 0
    text-align center
    cursor pointer
    transition: color .3s
    will-change: color
    &:hover
      color #fff - 20%
  &__options
    display none
    position absolute
    top 100%
    left 0
    width 100%
    background-color #0083A0
    z-index 10
  &__logo
    display none
.Hamburger
  width 30px
  display none
  cursor pointer
@media (max-width 1000px)
  .Address
    &__link
      font-size 1.2rem
      &:nth-child(3)
        display none
  .Select
    &__label
      font-size 1.2rem
@media (max-width 667px)
  .Address
    position fixed
    z-index 10
    &__container
      padding 1rem 0
    &__link
      display none
    &__logo
      display block
      & img
        width 100%
        max-width 11rem
    &__select
      display none
  .Hamburger
    display block

