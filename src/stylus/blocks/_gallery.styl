.Gallery
  margin-bottom 12rem
  &__top
    display flex
  &__bottom
    margin-top -3px !important
    display flex
  &__item
    position relative
    cursor pointer
    &:hover:after
      background rgba(0,0,0,0)
    &:after
      content ''
      width 100%
      height 100%
      top 0
      left 0
      position absolute
      background rgba(0,0,0,0.38)
      transition 0.5s
    & img
      width 100%
      object-fit cover

@media (max-width 1000px)
  .Gallery
    &__item
      width 50%
      margin-bottom -4px
    &__bottom
      flex-wrap wrap
