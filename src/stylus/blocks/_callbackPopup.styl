.CallbackPopup
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background-color rgba(0,0,0,.4)
  z-index 10
  display none
  justify-content center
  align-items center
  opacity 0
  transition: opacity .5s
  will-change: opacity
  &__container
    position relative
    background-color #fff
    padding 4rem
    border-radius: 6px
  &__close
    position absolute
    top 0
    right 0
    display flex
    justify-content center
    align-items center
    transform translate(50%, -50%)
    width 4rem
    height 4rem
    background-color #fff
    border 1px solid #EEEEEE
    border-radius: 50%
    box-shadow: 0 2px 4px rgba(#CECECE, .5)
    cursor pointer
    &::after
      content '\f00d'
      font-family: 'FontAwesome'
      font-size: 1.8rem
      color black
      opacity 0.15
  &__heading
    font-size: 3rem
    color black
    font-family RobotoSlab
    font-weight 700
    text-align center
    margin-bottom 3rem
  &__button
    font-family OpenSans
    font-weight 700
    padding 1.2rem 2.4rem 1.2rem 4rem
    font-size 1.8rem
    & span svg
      width: 1.4rem;
      margin-left: .4rem;
      margin-top: 0.2rem;
    & span
      margin-left 0
    &:last-child
      margin 0 auto
  &__text
    font-size: 2.1rem
    font-weight: 400
    color black
    margin-bottom 0.5rem
  &__title
    font-size: 1.9rem
    font-weight: 300
    margin-bottom 1.8rem
  &__form
    width 54rem
  &__input
    display block
    width 100%
    font-size: 1.6rem
    font-weight: 600
    color black
    font-family OpenSans
    padding 1.2rem 3.4rem
    border 1px solid #E0E0E0
    border-radius: 100px
    margin-bottom 1rem
    &::placeholder
      color #999999
  &__agreement
    display flex
    justify-content center
    align-items center
    margin 3.8rem 0
  &__textarea
    resize none
    height 10rem
    border-radius 2rem
  &__checkbox
    display none
    &:checked + label::before
      background-color #0690AF
  &__item
    margin-bottom 2.2rem
  &__label
    position relative
    font-size: 1.4rem
    font-weight: 500
    color #999999
    user-select: none
    cursor pointer
    &_input
      display block
      font-size 1.6rem
      font-family OpenSans
      font-weight 400
      margin-bottom 0.8rem
      & span
        color #0690af
    &::before
      content ''
      position absolute
      top 50%
      right calc(100% + 7px)
      width 1.5rem
      height 1.5rem
      border 1px solid #CACACA
      border-radius: 4px
      transform translateY(-50%)
      background-clip: content-box
      padding 2px
      box-sizing: border-box
  &__link
    font-size: 1.4rem
    font-weight: 500
    color #0690AF
    text-decoration: underline

.alertify-logs
  font-size 1.8rem

@media (max-width 667px)
  .CallbackPopup
    &__container
      width 90%
    &__form
      width 100%
