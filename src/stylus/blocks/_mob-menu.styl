.Mob-menu
  position fixed
  top 0
  left 100%
  display flex
  flex-direction: column
  width 100%
  height 100vh
  background-color rgba(0,33,40,0.95)
  z-index: 20000
  padding 3rem 1.2rem
  transition: .5s
  will-change: left
  &__top
    display flex
    justify-content: space-between
    align-items: center
    flex-shrink: 0
    flex-grow: 0
  &__logo
    & svg
      width 11rem
  &__close
    & svg
      height 32px
  &__menu
    height 60%
    padding-top 1rem
    display flex
    flex-direction: column
    align-items: center
    justify-content: space-around
  &__item
    font-family: OpenSans
    font-weight 600
    font-size: 1.6rem
    color #fff
    transition 0.3s
  &__select
    display block
    margin 0 auto
    margin-bottom 3rem
  &__links
    align-self: flex-start;
    padding-left: 4rem;
  &__link
    display block
    margin-right 0
    margin-bottom 2rem
    &:nth-child(3)
      display block
  &__info
    height 30%
    display flex
    flex-direction: column
    align-items: center
    justify-content: space-around




@media (max-width: 667px)
  .Mob-menu
    &__item
      font-size: 1.8rem
  .Mobile
    &__line
      display flex
