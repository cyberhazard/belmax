.Footer
  padding 3.4rem 0
  &__content
    display flex
    justify-content space-between
  &__left
    width 50%
  &__right
    width 44%
    display flex
    justify-content flex-end
  &__rules
    margin-right 4rem
    cursor pointer
  &__politics
    cursor pointer
  &__text
    font-size 1.4rem
    font-weight 600
    color RGB(159, 159, 159)

@media (max-width 667px)
  .Footer
    &__content
      flex-wrap wrap
    &__left
      width 100%
      order 2
    &__right
      width 100%
      margin-bottom 2rem
    &__text
      display block
      margin-right 0
      width 100%
